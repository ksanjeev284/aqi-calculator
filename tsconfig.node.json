{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": false,
    "outDir": "dist/scripts",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/scripts/**/*.ts",
    "src/utils/constants.ts"
  ]
}
